<h1 class="text-2xl font-bold mb-6">Sign Up</h1>

<%= form_with model: @user, class: "space-y-5" do |form| %>

  <% if @user.errors.any? %>
    <div class="bg-red-100 text-red-700 p-4 rounded">
      <h2 class="font-semibold">
        <%= pluralize(@user.errors.count, "error") %> prevented this account from being created:
      </h2>
      <ul class="list-disc ml-6">
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :email_address, class: "block font-semibold" %>
    <%= form.email_field :email_address, class: "w-full border rounded px-4 py-2" %>
  </div>

  <div>
    <%= form.label :password, class: "block font-semibold" %>
    <%= form.password_field :password, class: "w-full border rounded px-4 py-2" %>
  </div>

  <div>
    <%= form.label :password_confirmation, class: "block font-semibold" %>
    <%= form.password_field :password_confirmation, class: "w-full border rounded px-4 py-2" %>
  </div>

  <div>
    <%= form.submit "Create Account",
        class: "bg-[#311432] text-white px-6 py-3 rounded hover:opacity-90" %>
  </div>

<% end %>
