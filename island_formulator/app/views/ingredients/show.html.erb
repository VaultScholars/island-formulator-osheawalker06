<% content_for :title, "Showing ingredient" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl">Showing ingredient</h1>

  <%= render @ingredient %>

  <div class="flex items-center gap-6 mt-8">

  <%= link_to "Edit this ingredient", edit_ingredient_path(@ingredient),
    class: "bg-[#9E7BB5] text-white px-6 py-3 rounded-xl font-semibold shadow-md hover:brightness-110 transition duration-200" %>

  <%= link_to "Back to ingredients", ingredients_path,
    class: "bg-[#9E7BB5] text-white px-6 py-3 rounded-xl font-semibold shadow-md hover:brightness-110 transition duration-200" %>

  <%= button_to "Destroy this ingredient", @ingredient,
    method: :delete,
    form_class: "inline",
    class: "bg-[#630436] text-white px-6 py-3 rounded-xl font-semibold shadow-md hover:brightness-125 transition duration-200" %>

</div>
