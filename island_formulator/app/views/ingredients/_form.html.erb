<%= form_with(model: ingredient, class: "contents") do |form| %>
  <% if ingredient.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-700 px-4 py-3 rounded-md mb-6">
      <h2 class="font-bold mb-2">
        <%= pluralize(ingredient.errors.count, "error") %> prohibited this ingredient from being saved:
      </h2>
      <ul class="list-disc ml-6">
        <% ingredient.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-6">
    <!-- NAME -->
    <div>
      <%= form.label :name, class: "block text-sm font-semibold text-gray-300 mb-2" %>
      <%= form.text_field :name,
        class: "block w-full rounded-2xl bg-[#1f2a3a] text-white border-2 border-[#9E7BB5] px-4 py-3 shadow-md focus:outline-none focus:ring-2 focus:ring-[#9E7BB5]" %>
    </div>

    <!-- CATEGORY -->
    <div>
      <%= form.label :category, class: "block text-sm font-semibold text-gray-300 mb-2" %>
      <%= form.text_field :category,
        class: "block w-full rounded-2xl bg-[#1f2a3a] text-white border-2 border-[#9E7BB5] px-4 py-3 shadow-md focus:outline-none focus:ring-2 focus:ring-[#9E7BB5]" %>
    </div>

    <!-- DESCRIPTION -->
    <div>
      <%= form.label :description, class: "block text-sm font-semibold text-gray-300 mb-2" %>
      <%= form.text_area :description, rows: 5,
        class: "block w-full rounded-2xl bg-[#1f2a3a] text-white border-2 border-[#9E7BB5] px-4 py-3 shadow-md focus:outline-none focus:ring-2 focus:ring-[#9E7BB5]" %>
    </div>

    <!-- NOTES -->
    <div>
      <%= form.label :notes, class: "block text-sm font-semibold text-gray-300 mb-2" %>
      <%= form.text_area :notes, rows: 5,
        class: "block w-full rounded-2xl bg-[#1f2a3a] text-white border-2 border-[#9E7BB5] px-4 py-3 shadow-md focus:outline-none focus:ring-2 focus:ring-[#9E7BB5]" %>
    </div>

    <!-- ACTIONS -->
    <div class="flex flex-wrap items-center gap-4 pt-2">
    <%= form.submit(
      ingredient.persisted? ? "Update Ingredient" : "Create Ingredient",
      class: "w-full sm:w-auto rounded-xl px-8 py-4 bg-[#311432] hover:bg-[#4A1E48] text-white font-bold shadow-md transition duration-200"
    ) %>


      <%= link_to "Show this ingredient", @ingredient,
          class: "inline-block rounded-xl px-6 py-3 bg-[#9E7BB5] hover:brightness-110 text-white font-semibold shadow-md transition duration-200" %>

      <!-- these are your “white boxes” - now heather -->
      <%= link_to "Back to ingredients", ingredients_path,
        class: "inline-block rounded-xl px-6 py-3 bg-[#9E7BB5] hover:brightness-110 text-white font-semibold shadow-md transition duration-200" %>
    </div>
  </div>
<% end %>
